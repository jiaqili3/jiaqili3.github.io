<div class="internship">
  {% if site.internship != blank %}
    <div class="table-responsive">
      <table class="table table-sm table-borderless">
        {% assign internships = site.internship | reverse %}
        {% for item in internships %}
          <tr>
            <!-- 左侧：公司名称 -->
            <th scope="row" style="width: 20%; color: var(--global-theme-color);">
              {{ item.company }}
            </th>

            <!-- 右侧内容 -->
            <td>
              <!-- position、location、date_range 并列显示 -->
              <div style="margin-bottom: 0.5rem;">
                <span>{{ item.position }}</span>
                <span style="margin: 0 0.5rem;">·</span>
                <span><i class="fas fa-map-marker-alt" style="margin-right: 0.3rem;"></i>{{ item.location }}</span>
                <span style="margin: 0 0.5rem;">·</span>
                <span>{{ item.date_range }}</span>
              </div>

              <!-- 描述和关键词 -->
              <div style="margin-bottom: 0.5rem;">
                {{ item.description }}
              </div>
              <div>
                {% for keyword in item.keywords %}
                  <span style="font-style: italic; margin-right: 0.75rem;">
                    {{ keyword }}
                  </span>
                {% endfor %}
              </div>
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No internship experiences yet...</p>
  {% endif %}
</div>
